#include <iostream>
#include <algorithm>  // for sort and binary_search
using namespace std;

int main() {
    int n;
    cout << "Enter number of elements: ";
    cin >> n;

    int arr[n];

    cout << "Enter " << n << " elements:\n";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    // Sort the array
    sort(arr, arr + n);

    cout << "\nSorted array: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }

    int key;
    cout << "\n\nEnter element to search: ";
    cin >> key;

    // Binary search
    if (binary_search(arr, arr + n, key)) {
        cout << "Element " << key << " found in the array ✅";
    } else {
        cout << "Element " << key << " not found in the array ❌";
    }

    return 0;
}
